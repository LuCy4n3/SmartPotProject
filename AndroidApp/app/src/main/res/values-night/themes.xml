<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.GreenGrowTechApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Use white text on dark background -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#FFFFFF</item> <!-- Black background for dark mode -->
    </style>
</resources>
